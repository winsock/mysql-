CXX=cl
INCLUDES=/Ic:\mysql\include -I..\lib
CXXFLAGS=$(INCLUDES) /Od /G5 /EHsc /nologo /MDd /Zi /c

LD=$(CXX)
LDFLAGS=/nologo
LDEXEFLAG=/link /LIBPATH:c:\mysql\lib\opt libmysql.lib \
		/LIBPATH:..\lib mysqlpp.lib /OUT:

EXTRA_CLEAN=*.dll *.pdb

OBJ=obj
EXE=.exe
DEL=del /q


.SUFFIXES: .cpp .obj
.cpp.obj:
	$(CXX) $(CXXFLAGS) $<


vc: all
