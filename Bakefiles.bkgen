<?xml version="1.0" ?>
<bakefile-gen>
    <input>
        ./mysql++.bkl
    </input>

    <!-- List of output formats to generate: -->
    <add-formats>
        autoconf,gnu,msvc6prj,mingw
    </add-formats>

    <add-flags formats="gnu">
        -o$(INPUT_FILE_DIR)/Makefile.simple
    </add-flags>

    <add-flags formats="mingw">
        -o$(INPUT_FILE_DIR)/Makefile.mingw
    </add-flags>
</bakefile-gen>
